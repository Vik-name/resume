{{#each goodsList}}
<div class="card col-6 mb-2">
    <img class="card-img-top" src="{{img}}" alt="{{name}}">
    <div class="card-body">
        <h5 class="card-title">{{title}}
            {{#if isHot}}
            <span class="bage text-bg-warning rounded-pill m-2 px-2">HOT!</span>
            {{/if}}
            {{#if isNew}}
            <span class="bage text-bg-primary rounded-pill m-3 px-2">Нове</span>
            {{/if}}
        </h5>
        <div>
            {{#if isFast}}
            <span class="bage text-bg-success rounded-pill m-3 px-2">Швидка доставка!</span>
            {{/if}}
        </div>
        <div>{{#if isFree}}
            <span class="bage text-bg-secondary rounded-pill m-3 px-2">Безкоштовна доставка</span>
            {{/if}}
        </div>
        <h5 class="mt-3">{{name}}</h5>
        <p>{{review.amount}} {{review.text}}</p>
        <h3>{{price}}</h3>
        <p>{{delivery}}</p>
        {{#each buttons}}
        <div>
            {{#if isPrimary}}
            <button src="{{link}}" class="btn btn-primary mb-2">{{text}}</button>
            {{/if}}
            {{#if isSecondary}}
            <button src="{{link}}" class="btn btn-secondary">{{text}}</button>
            {{/if}}
        </div>
        {{/each}}

        {{#each characteristics}}
        <div class="mt-2">
            <ul>
                <li>{{this.title}}: {{this.value}}</li>
            </ul>
        </div>
        {{/each}}
    </div>


</div>
{{/each}}