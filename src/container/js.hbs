<div>
    <div class="accordion" id="accordionExample">
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne"
                    aria-expanded="true" aria-controls="collapseOne">
                    <h1>{{name}}</h1>
                </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <strong>{{history.founder}} ({{history.year}})<br></strong>
                    {{description}}
                </div>
            </div>
        </div>
    </div>
    <br>
    <div>
        <span class="badge text-bg-primary">
            <h4>types</h4>
        </span>
        <ul>
            {{#each types}}
            <li>
                {{this}}
            </li>
            {{/each}}
        </ul>
    </div>
    <hr>
    <div>
        <span class="badge text-bg-primary">
            <h4>syntax</h4>
        </span>
        {{#with syntax}}
        <div>
            <span class="badge text-bg-light">
                <h5>variables</h5>
            </span>
            <div>
                <ul>
                    {{#each variables}}
                    <li>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>

        <div>
            <span class="badge text-bg-light">
                <h5>functions</h5>
            </span>
            <div>
                <ul>
                    {{#each functions}}
                    <li>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div>
            <span class="badge text-bg-light">
                <h5>conditionals</h5>
            </span>
            <div>
                <ul>
                    {{#each conditionals}}
                    <li>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div>
            <span class="badge text-bg-light">
                <h5>loops</h5>
            </span>
            <div>
                <ul>
                    {{#each loops}}
                    <li>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div>
            <span class="badge text-bg-light">
                <h5>classes</h5>
            </span>
            <div>
                <ul>
                    {{#each classes}}
                    <li>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        {{/with}}
    </div>
    <hr>
    <div>
        <span class="badge text-bg-primary">
            <h4>features</h4>
        </span>
        <div>
            <ul>
                {{#each features}}
                <li>
                    {{this}}
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <hr>
    <div>
        <span class="badge text-bg-primary">
            <h4>features</h4>
        </span>
        <ul>
            {{#each features}}
            <li>
                {{this}}
            </li>
            {{/each}}
        </ul>
    </div>
    <hr>
    <div>
        <span class="badge text-bg-primary">
            <h4>libraries</h4>
        </span>
        <ul>
            {{#each libraries}}
            <li>
                {{this}}
            </li>
            {{/each}}
        </ul>
    </div>
    <hr>
    <div>
        <span class="badge text-bg-primary">
            <h4>tools</h4>
        </span>
        <ul>
            {{#each tools}}
            <li>
                {{this}}
            </li>
            {{/each}}
        </ul>
    </div>
    <hr>
    <div>
        <span class="badge text-bg-primary">
            <h4>community</h4>
        </span>
        <ul>
            {{#each community}}
