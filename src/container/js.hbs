{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


<div>

    <sections>
        <h1>{{name}}</h1>
        <p>{{description}}</p>
        <p><b>{{history.founder}} ({{history.year}})</b></p>
    </sections>

    <hr>

    <div>
        <h3>types:</h3>
        <ul>
            {{#each types}}
            <li>
                {{this}}
            </li>
            {{/each}}
        </ul>
    </div>

    <hr>

    <div>
        <h3>syntax</h3>

        {{#with syntax}}
        <div>
            <h5>variables</h5>
            <div>
                <ul>
                    {{#each variables}}
                    <li>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>

        <div>
            <h5>functions</h5>
            <div>
                <ul>
                    {{#each functions}}
                    <li>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>

        <div>
            <h5>conditionals</h5>
            <div>
                <ul>
                    {{#each conditionals}}
                    <li>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>

        <div>
            <h5>loops</h5>
            <div>
                <ul>
                    {{#each loops}}
                    <li>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>

        <div>
            <h5>classes</h5>
            <div>
                <ul>
                    {{#each classes}}
                    <li>
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        {{/with}}
    </div>

    <hr>

    <div>
        <h4>features</h4>
        <div>
            <ul>
                {{#each features}}
                <li>
                    {{this}}
                </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <hr>

    <div>
        <h4>libraries</h4>
        <ul>
            {{#each libraries}}
            <li>
                {{this}}
            </li>
            {{/each}}
        </ul>
    </div>

    <hr>

    <div>
        <h4>tools</h4>
        <ul>
            {{#each tools}}
            <li>
                {{this}}
            </li>
            {{/each}}
        </ul>
    </div>

    <hr>

    <div>
        <h4>community</h4>
        <ul>
            {{#each community}}
            <li>
                {{name}} - ({{type}})
            </li>
            {{/each}}
        </ul>
    </div>
</div>


