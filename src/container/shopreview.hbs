{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

{{!-- logo --}}

<main>

    {{#with formBlock}}
    <div class="row g-2">
        <div class="col-8">
            <h1>{{header}}</h1>
            {{#with rating}}
            <p>{{title}}: {{value}}</p>
            {{/with}}

            {{!-- navigation --}}
            {{#with actionBlock}}
            <div class="nav nav-tabs m-3">
                {{#each tabs}}
                <div class="nav-item">
                    <a href="#" class="nav-link {{#if isActive}} active {{/if}}">{{this.text}}</a>
                </div>
                {{/each}}
            </div>

            {{!-- secondary button --}}

            {{#with report}}
            <div class="card p-3">
                <p>{{title}}</p>
                {{#with button}}
                <a href="{{link}}" alt="{{text}}" class="btn btn-secondary col-4">{{text}}</a>
                {{/with}}
            </div>
            {{/with}}
            <hr>
            {{/with}}

            {{!-- 3 color button --}}

            {{#with feedbackBlock}}
            <h3>{{title}}</h3>
            <div>
                {{#each buttons}}
                {{#if isWarning}}
                <button src="{{link}}" class="btn btn-warning text-light me-2">{{text}}</button>
                {{/if}}
                {{#if isSuccess}}
                <button src="{{link}}" class="btn btn-success text-light me-2">{{text}}</button>
                {{/if}}
                {{#if isDanger}}
                <button src="{{link}}" class="btn btn-danger me-2">{{text}}</button>
                {{/if}}
                {{/each}}
            </div>
            {{/with}}
        </div>

        {{!-- left section --}}


        <div class="col-4">
            {{#with goodsInfo}}
            <div class="card p-3 mb-2">
                <img src="{{photo}}" alt="{{name}}" class="col-8">
                <h5>{{name}}</h5>
            </div>

            <div class="card p-3 mb-2">
                <h5>{{price}}</h5>
                {{#each inMarket}}
                <p>Є в наявності</p>
                {{/each}}

                {{#each buttons}}
                <div>
                    {{#if isPrimary}}
                    <a href="{{link}}" alt="{{text}}" class="btn btn-primary mb-2">{{text}}</a>
                    {{/if}}
                    {{#if isSecondary}}
                    <a href="{{link}}" alt="{{text}}" class="btn btn-secondary">{{text}}</a>
                    {{/if}}
                </div>
                {{/each}}
            </div>

            {{#with seller}}
            <div class="card p-3 mb-2">
                <h6>{{title}}: <b>{{value}}</b></h6>
            </div>
            {{/with}}


            {{/with}}
        </div>


    </div>
    {{/with}}

    <hr>

    {{!-- section for all widht --}}

    {{>reviewItem}}




    {{!-- green card --}}

    {{>shopaction}}

</main>


