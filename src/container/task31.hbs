{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


<div>
    {{#with navigation}}
    <div>
        {{#each links}}
        <a href="{{href}}" class="btn btn-link">
            {{text}}
        </a>
        {{/each}}

        <button href="{{button.href}}" class="btn btn-primary">
            {{button.text}}
        </button>
    </div>
    {{/with}}

    <hr>

    {{#with header}}
    <div>
        <h1>{{title}}</h1>
        <p>{{description}}</p>
        <button href="{{button.link}}" class="btn btn-primary">
            {{button.text}}</button>
    </div>
    {{/with}}

    <hr>

    <div>
        {{#with city}}
        <div>
            <h2>{{title}}</h2>
        </div>
        <br>
        <div class="row g-3">
            {{#each cards}}
            <div class="col-6">
                <div class="card">
                    <img class="card-img-top" src="{{picture.src}}" alt="{{picture.alt}}">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <p>{{description}}</p>
                        <button href="{{button.href}}" class="btn btn-primary">
                            {{button.text}}</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>

    <hr>

    <div>
        {{#with winner}}
        <div>
            <h2>{{title}}</h2>
        </div>

        <div>
            {{#with table}}
            <table class="table">
                <div>
                    <thead>
                        <tr>
                            {{#each head}}
                            <th>
                                {{this}}
                            </th>
                            {{/each}}
                        </tr>
                    </thead>
                    <tbody>
                        {{#each user}}
                        <tr>
                            <th>{{place}}</th>
                            <td>{{name}}</td>
                            <td>{{surname}}</td>
                            <td>{{nickname}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                    <br>
                </div>
            </table>
            {{/with}}
        </div>
        {{/with}}
    </div>

    <hr>

    <div>
        {{#with gallery}}
        <div>
            <h2>{{title}}</h2>
        </div>

        <br>

        <div>
            <div class="row g-2">
                {{#each cards}}
                <div class="col-4">

                    <div class="card text-bg-light">
                        <div class="card-header">
                            <div>{{name}}</div>
                        </div>

                        <ul class="list-group list group-flush">
                            {{#each items}}
                            <li class="list-group-item">
                                {{this}}
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{/with}}
    </div>

    <hr>


    <div>
        {{#with relaxion}}
        <div class="display-3">{{title}}</div>

        <br>
        <div class="row g-5">
            {{#each cards}}
            <div class="col-6">
                <div class="card text-bg-secondary">
                    <div class="card-header">{{header}}</div>
                    <div class="card-body">
                        <h4 class="card-title">{{title}}</h4>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>

    <hr>

    <div>
        {{#with rest}}
        <div class="row g-5">
            {{#each cards}}
            <div class="col-6">
                <div class="card">
                    <div class="card-header text-center">{{header}}</div>
                    <div class="card-body text-center">
                        <h4 class="card-title">{{title}}</h4>
                        <p>{{description}}</p>
                        <button class="btn btn-primary">{{button}}</button>
                    </div>
                    <div class="card-footer text-center">{{footer}}</div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>

    <hr>

    <div>
        {{#with proposition}}
        <div class="display-2">{{title}}</div>

        <br>
        <div class="row g-4">
            {{#each card}}
            <div class="col-4">
                <div class="card text-bg-warning text-light">
                    <div class="card-header">{{header}}</div>
                    <div class="card-body">
                        <h4 class="card-title">{{title}}</h4>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>

    <hr>

    <div>
        {{#with footer}}
        <div>
            <h5>{{title}}</h5>
        </div>

        <br>

        <div>
            <div class="row gx-2">
                <div class="col-4">
                    <ul class="list-group">
                        {{#each navigation}}
                        <li class="list-group-item">
                            <button href="{{href}}" class="btn btn-outline-light btn-link btn-sm">
                                {{text}}
                            </button>
                        </li>
                        {{/each}}
                    </ul>
                </div>

                <div class="col-4">
                    <ul class="list-group">
                        {{#each socialMedia}}
                        <li class="list-group-item">
                            <button href="{{link}}" class="btn btn-outline-dark btn-sm">
                                {{name}}
                            </button>
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="col-4">
                    <ul class="list-group">
                        {{#each partners}}
                        <li class="list-group-item">
                            <button href="{{link}}" class="btn btn-outline-info btn-sm">
                                {{name}}
                            </button>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    {{/with}}














</div>

