{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


<div>
    {{#with web}}
    <div>
        {{#each languages}}
        <div>
            <h2>{{name}}</h2>
            {{version}}<br>
            <p>{{description}}</p>
            <div>
                <ul>
                    {{#each elements}}
                    <li>
                        <b>{{name}}</b><br>
                        <p>{{description}}</p>
                        <div>
                            <ul>
                                {{#each attributes}}
                                <li>
                                    <b>{{name}}</b><br>
                                    <p>{{description}}</p>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div>
                <ul>
                    {{#each properties}}
                    <li>
                        <b>{{name}}</b><br>
                        <p>{{description}}</p>
                        <div>
                            <ul>
                                {{#each values}}
                                <li>
                                    <b>{{value}}</b><br>
                                    <p>{{description}}</p>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div>
                <ul>
                    {{#each functions}}
                    <li>
                        <b>{{name}}</b><br>
                        <p>{{description}}</p>
                        <div>
                            <ul>
                                {{#each parameters}}
                                <li>
                                    <b>{{name}}</b><br>
                                    <i>{{type}}</i><br>
                                    <p>{{description}}</p>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        {{/each}}
    </div>
    {{/with}}
</div>

