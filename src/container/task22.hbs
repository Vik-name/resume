{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with page_header}}

    <div class="text-center">
        <h1>{{title}}</h1>
        <p class="text-uppercase">{{description}}</p>
    </div>
    {{/with}}

    {{#with section}}
    <div class="card card-body pb-0">
        {{#with about_us}}
        {{#with title_list}}
        <div class="display-6 text-end mb-4">{{main}}</div>
        <h2 class="text-end mb-4">{{sub}}</h2>
        {{/with}}
        {{#with button}}
        <div>
            <button class="btn btn-outline-info mb-4">{{text}}</button>
        </div>
        {{/with}}
        {{/with}}
    </div>

    {{!-- 2 cards --}}


    {{#with advantage}}
    <div class="card my-3">

        <div class="display-5 mt-3 ms-3">{{title}}</div>
        {{#with efficiency}}
        <div class="card card-body pb-0 m-3">
            <div class="display-4">{{title}}</div>
            <h6 class="my-4">{{sub_title}}</h6>
            <p>{{description}}</p>
            <div>
                <button class="btn btn-outline-warning my-4">{{button}}</button>
            </div>
        </div>
        {{/with}}


        {{#with innovation}}
        <div class="card mx-3">
            <div class="text-center">
                <div class="display-4 mb-4">{{title}}</div>
                <h6 class="my-4">{{sub_title}}</h6>
                <p>{{description}}</p>
            </div>

            <div>
                <button class="btn btn-outline-warning ms-3 my-4">{{button}}</button>
            </div>
        </div>
        {{/with}}


        {{#with collaboration}}
        <div class="card m-3">
            <div class="text-end me-3">
                <div class="display-4 mb-4">{{title}}</div>
                <h6 class="my-4">{{sub_title}}</h6>
                <p>{{description}}</p>
            </div>

            <div>
                <button class="btn btn-outline-warning ms-3 my-4">{{button}}</button>
            </div>
        </div>
        {{/with}}

    </div>
    {{/with}}

    {{!-- 3 cards --}}

    {{#with agreement}}
    <div class="card">
        <div class="display-4 ms-3 mb-4">{{title}}</div>

        {{#with info}}
        <div class="card m-3">
            <h6 class="ms-3 my-4">{{sub_title}}</h6>


            {{#with detail}}
            <div class="card m-3">
                <p class="ms-3 mt-4">{{text}}</p>
                <div><button class="btn btn-success ms-3 my-4">{{button}}</button></div>
            </div>
            {{/with}}

        </div>
        {{/with}}

    </div>
    {{/with}}

    {{/with}}
</div>








