            {{#each Bootstrap_task}}
            <a href="{{link}}" alt="{{text}}" class="btn btn-outline-success mb-2">{{text}}</a>
            {{/each}}
        </section>
        <div class="col-6  display-5 text-success ms-2 mt-5"><b>Bootstrap tasks</b>
        </div>

    </div>
</div>

<div class="row g-2">
    <div class="card d-flex flex-row mb-2 border-success border-2">
        <div class="col-3"></div>
        <section class="card bg-dark col-4 p-2 m-3">
            {{#each Shop}}
            <a href="{{link}}" alt="{{text}}" class="btn btn-outline-warning mb-2">{{text}}</a>
            {{/each}}
        </section>
        <div class="col-5 display-5 text-warning ms-2 mt-5"><b>Shop</b>
        </div>
    </div>
</div>


