{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>

    {{!-- Black card --}}

    {{#with newsBlock}}
    <div class="display-6 text-center mb-5">{{title}}</div>

    <div class="row g-2">
        {{#each cards}}
        <div class="col-3">

            {{>shoppost}}

        </div>
        {{/each}}
    </div>
    {{/with}}


    <hr>

    {{#with goodsBlock}}
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="nav nav-tabs">
                {{#each tabs}}
                <div class="nav-item">
                    {{#if isActive}}
                    <a href="#" class="nav-link active">{{text}}</a>
                    {{else}}
                    <a class="nav-link {{#if isDisabled}} disabled {{/if}}" href="#">{{text}}</a>
                    {{/if}}
                </div>
                {{/each}}
            </div>
        </div>
    </div>

    <div class="row g-2">
        {{#each cards}}
        <div class="col-4">


            {{>shopcard}}

        </div>
        {{/each}}
        {{/with}}

        <hr>

        {{#with subscribe}}
        <div class="card text-bg-dark m-2">

            <div class="row g-2">
                <div class="col-6">
                    <h2 class="ms-1">{{header}}</h2>
                    <p class="ms-1">{{description}}</p>
                </div>
                {{#each buttons}}
                <div class="col-3">
                    <div class="card mt-4">
                        <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                    </div>
                </div>{{/each}}
            </div>
        </div>
        {{/with}}

        <hr>

        {{>shopaction}}

        {{!-- {{#with service}}
        <div class="card text-bg-success m-2">
            <div class="card-body text-center">
                <h2 class="text-center ms-1">{{title}}</h2>
                <p class="ms-1 text-center">{{description}}</p>
                {{#each buttons}}
                <a href="{{link}}" class="btn btn-primary text-right">{{text}}</a>
                {{/each}}
            </div>
        </div>
        {{/with}} --}}
































</main>


